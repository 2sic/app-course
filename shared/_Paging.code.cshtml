@inherits ToSic.Sxc.Dnn.RazorComponentCode
@using ToSic.Razor.Blade;

@functions {
	// generate a paging-link number, preserving current category parameters
    public string LinkToPageNumber(int pageNumber, String eventP){
        string url = (@eventP + "/" + (!String.IsNullOrEmpty(Request.QueryString["category"])
            ? "sort/" + (Request.QueryString["category"] + "/") 
            : "") + "page/" + pageNumber);
        return url.ToLower();
    }
}